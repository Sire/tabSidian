{
    "manifest_version": 2,
    "name": "Tab Summarizer",
    "version": "0.14",
    "description": "A browser extension to summarize open tabs.",
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon48.png",
      "default_title": "Summarize Tabs"
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  