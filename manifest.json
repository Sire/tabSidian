{
    "manifest_version": 2,
    "name": "tabGPT",
    "version": "1.0",
    "description": "A Microsoft Edge extension that categorizes and summarizes open tabs using ChatGPT API.",
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "http://*/",
      "https://*/"
    ],
    "browser_action": {
      "default_icon": {
        "48": "icon48.png"
      },
      "default_title": "Categorize and Summarize Tabs"
    },
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  